{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/admin", "destination": "/api/index" },
    { "source": "/api/ad-config.json", "destination": "/api/index" },
    { "source": "/api/ad-config", "destination": "/api/index" },
    { "source": "/click/:path*", "destination": "/api/index" }
  ]
}
